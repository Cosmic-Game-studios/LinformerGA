            <div class="card-header bg-body-tertiary border-0 d-flex justify-content-between align-items-center px-4 py-3"
                 style="border-radius:1.2rem 1.2rem 0 0">
                <div class="d-flex align-items-center gap-4">
                    <span class="fw-semibold h5 mb-0 text-body-emphasis">
                        <i class="fas fa-bug me-2 text-danger"></i>{{ $currentFile }}
                    </span>

                    {{-- Dropdown: Zeilen/Seite --}}
                    <div class="d-flex align-items-center gap-2">
                        <label for="perPageSelect" class="small mb-0 text-body-secondary">Zeilen/Seite:</label>
                        <select id="perPageSelect"
                                class="form-select form-select-sm"
                                data-bs-toggle="tooltip"
                                data-bs-title="Einträge pro Seite">
                            @foreach($perPageOptions as $opt)
                                <option value="{{ $opt }}" {{ $perPage == $opt ? 'selected' : '' }}>
