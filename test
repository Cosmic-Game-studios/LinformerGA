                       data-bs-toggle="tooltip" data-bs-title="Download">
                        <i class="fas fa-download"></i>
                    </a>
                    {{-- Clear --}}
                    <form action="{{ route('admin.errorlog.clear') }}" method="POST" class="m-0"
                          onsubmit="return confirm('Alte Logs löschen?');">
                        @csrf @method('DELETE')
                        <button class="btn btn-sm btn-body-secondary border-0 shadow-sm text-danger"
                                data-bs-toggle="tooltip" data-bs-title="Alte Logs löschen">
