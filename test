<x-app-layout>
    <x-app-marginal class="bg-body border-start" style="min-width:260px;max-width:320px">
        <div class="d-flex flex-column h-100">
            <div class="py-2 px-3 border-bottom bg-body-tertiary fw-semibold text-uppercase small sticky-top" style="z-index:2;">
                <i class="fas fa-list-ul me-2"></i> Log-Dateien
            </div>
            <div class="flex-grow-1 overflow-auto">
                <div class="list-group list-group-flush">
                    @foreach($files as $file)
                        @php $active = $currentFile === $file->getFilename(); @endphp
                        <a href="{{ route('admin.errorlog.index', ['file' => $file->getFilename()]) }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center
                                  border-0 py-3 pe-3 ps-4 {{ $active ? 'active bg-primary text-white shadow-sm' : 'sidebar-item' }}">
                            <span class="text-truncate" style="max-width:120px">
                                <i class="fas fa-file-alt me-2 text-body-secondary"></i>
                                {{ $file->getFilename() }}
                            </span>
                            <small class="badge bg-body-secondary text-body rounded-pill">{{ number_format($file->getSize()/1024,1) }} KB</small>
                        </a>
                    @endforeach
                </div>
            </div>
        </div>
    </x-app-marginal>

    <x-app-content>
        <div class="card border-0 shadow-sm my-4" style="border-radius: 1.2rem">
            <div class="card-header bg-body-tertiary border-0 d-flex flex-wrap gap-2 justify-content-between align-items-center px-4 py-3" style="border-radius:1.2rem 1.2rem 0 0">
                <span class="fw-semibold h5 mb-0 text-body-emphasis">
                    <i class="fas fa-bug me-2 text-danger"></i>{{ $currentFile }}
                </span>
                <div class="btn-group">
                    <a href="{{ route('admin.errorlog.download', ['file' => $currentFile]) }}"
                       class="btn btn-sm btn-body-secondary border-0 shadow-sm"
                       data-bs-toggle="tooltip" data-bs-title="Download">
                        <i class="fas fa-download text-body-secondary"></i>
                    </a>
                    <form action="{{ route('admin.errorlog.clear') }}"
                          method="POST" class="m-0"
                          onsubmit="return confirm('Alle älteren Log-Dateien löschen?');">
                        @csrf @method('DELETE')
                        <button type="submit"
                                class="btn btn-sm btn-body-secondary border-0 shadow-sm text-danger"
                                data-bs-toggle="tooltip" data-bs-title="Alte Logs löschen">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>

            {{-- Moderner Log-Feed --}}
            <div class="card-body bg-body px-0 py-3" style="max-height:65vh; overflow:auto">
                <div class="d-flex flex-column gap-2 px-2">
@foreach($logs as $entry)
    @php
        $levelMap = [
            'error'    => ['bg-danger text-white',      'FEHLER'],
            'critical' => ['bg-danger text-white',      'KRITISCH'],
            'warning'  => ['bg-warning text-dark',      'WARNUNG'],
            'info'     => ['bg-info text-dark',         'INFO'],
            default    => ['bg-secondary text-white',   strtoupper($entry['level'] ?? 'INFO')],
        ];
        [$badgeClass, $badgeLabel] = $levelMap[$entry['level']] ?? $levelMap['default'];
    @endphp
    <div class="d-flex gap-3 align-items-start rounded shadow-sm py-2 px-3 bg-body-tertiary border border-1">
        <span class="badge {{ $badgeClass }} fs-7 px-2 py-2 mt-1" style="min-width:72px">{{ $badgeLabel }}</span>
        <span class="font-monospace small text-wrap" style="line-height:1.45; word-break:break-word;">
            {!! nl2br(e($entry['raw'])) !!}
        </span>
    </div>
@endforeach
                </div>
            </div>

            {{-- Pagination --}}
            <div class="card-footer bg-body border-0 d-flex justify-content-center py-3" style="border-radius:0 0 1.2rem 1.2rem">
                {{-- Individuelle Pagination --}}
                @php
                    $paginator = $logs;
                @endphp
                @if ($paginator->hasPages())
                    <nav>
                        <ul class="pagination pagination-sm mb-0 gap-2">
                            {{-- Zurück --}}
                            <li class="page-item {{ $paginator->onFirstPage() ? 'disabled' : '' }}">
                                <a class="page-link px-2 py-1" href="{{ $paginator->previousPageUrl() }}" rel="prev" aria-label="Zurück">
                                    <span class="d-inline-flex align-items-center"><i class="bi bi-chevron-left" style="font-size:.95em"></i> Zurück</span>
                                </a>
                            </li>

                            {{-- Seitenzahlen --}}
                            @foreach ($elements = $paginator->elements() as $element)
                                @if (is_string($element))
                                    <li class="page-item disabled"><span class="page-link px-2 py-1">{{ $element }}</span></li>
                                @endif
                                @if (is_array($element))
                                    @foreach ($element as $page => $url)
                                        <li class="page-item {{ $page == $paginator->currentPage() ? 'active' : '' }}">
                                            <a class="page-link px-2 py-1" href="{{ $url }}">{{ $page }}</a>
                                        </li>
                                    @endforeach
                                @endif
                            @endforeach

                            {{-- Weiter --}}
                            <li class="page-item {{ $paginator->hasMorePages() ? '' : 'disabled' }}">
                                <a class="page-link px-2 py-1" href="{{ $paginator->nextPageUrl() }}" rel="next" aria-label="Weiter">
                                    <span class="d-inline-flex align-items-center">Weiter <i class="bi bi-chevron-right" style="font-size:.95em"></i></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                @endif
            </div>
        </div>
    </x-app-content>
</x-app-layout>

@push('scripts')
<script>
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el =>
        new bootstrap.Tooltip(el)
    );
    const box = document.querySelector('.card-body');
    if (box) box.scrollTop = 0;
});
</script>
@endpush

