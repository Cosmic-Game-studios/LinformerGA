@push('scripts')
<script>
document.addEventListener('DOMContentLoaded', () => {
    // Beim Seitenaufruf ganz nach oben scrollen (neueste EintrÃ¤ge zuerst)
    const container = document.querySelector('.card-body');
    if (container) container.scrollTop = 0;
});
