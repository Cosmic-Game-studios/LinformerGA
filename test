<x-app-layout>
    {{-- Rechte Sidebar mit Log-Dateien --}}
    <x-app-marginal class="bg-body border-start" style="min-width:260px;max-width:320px">
        <div class="d-flex flex-column h-100">
            <div class="py-2 px-3 border-bottom bg-body-tertiary fw-semibold text-uppercase small sticky-top" style="z-index:2;">
                <i class="fas fa-list-ul me-2"></i> Log-Dateien
            </div>
            <div class="flex-grow-1 overflow-auto">
                <div class="list-group list-group-flush">
                    @foreach($files as $file)
                        @php $active = $currentFile === $file->getFilename(); @endphp
                        <a href="{{ route('admin.errorlog.index', ['file' => $file->getFilename()]) }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center
                                  border-0 py-3 pe-3 ps-4 {{ $active ? 'active bg-primary text-white shadow-sm' : 'sidebar-item' }}">
                            <span class="text-truncate" style="max-width:120px">
                                <i class="fas fa-file-alt me-2 text-body-secondary"></i>
                                {{ $file->getFilename() }}
                            </span>
                            <small class="badge bg-body-secondary text-body rounded-pill">
                                {{ number_format($file->getSize()/1024,1) }} KB
                            </small>
                        </a>
                    @endforeach
                </div>
            </div>
        </div>
    </x-app-marginal>

    {{-- Hauptbereich --}}
    <x-app-content>
        <div class="card border-0 shadow-sm my-4" style="border-radius:1.2rem">
            {{-- Header mit Aktionen --}}
            <div class="card-header bg-body-tertiary border-0 d-flex justify-content-between align-items-center px-4 py-3"
                 style="border-radius:1.2rem 1.2rem 0 0">
                <span class="fw-semibold h5 mb-0 text-body-emphasis">
                    <i class="fas fa-bug me-2 text-danger"></i>{{ $currentFile }}
                </span>
                <div class="btn-group">
                    <a href="{{ route('admin.errorlog.download', ['file' => $currentFile]) }}"
                       class="btn btn-sm btn-body-secondary border-0 shadow-sm"
                       data-bs-toggle="tooltip" data-bs-title="Download">
                        <i class="fas fa-download text-body-secondary"></i>
                    </a>
                    <form action="{{ route('admin.errorlog.clear') }}" method="POST" class="m-0"
                          onsubmit="return confirm('Alle älteren Log-Dateien löschen?');">
                        @csrf @method('DELETE')
                        <button type="submit"
                                class="btn btn-sm btn-body-secondary border-0 shadow-sm text-danger"
                                data-bs-toggle="tooltip" data-bs-title="Alte Logs löschen">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>

            {{-- Log-Tabelle --}}
            <div class="card-body bg-body p-0" style="max-height:68vh; overflow:auto">
                <div class="table-responsive px-0">
                    <table class="table table-sm table-hover align-middle mb-0"
                           style="font-family:'Fira Code','Consolas',monospace;font-size:.98rem">
                        <thead>
                            <tr class="small text-body-secondary">
                                <th style="width:90px">Level</th>
                                <th style="width:140px">Zeit</th>
                                <th>Nachricht</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach($logs as $entry)
                            @php
                                $lvl = $entry['level'];
                                $badgeColor = $lvl==='error'||$lvl==='critical'
                                    ? 'bg-danger text-white'
                                    : ($lvl==='warning'
                                        ? 'bg-warning text-dark'
                                        : 'bg-info text-dark');
                                preg_match('/\[(.*?)\]/', $entry['raw'], $m);
                                $time = $m[1] ?? '';
                                $message = trim(preg_replace('/^\[[^\]]+\]\s+\w+\.([A-Z]+):\s*/','',$entry['raw']));
                            @endphp
                            <tr>
                                <td>
                                    <span class="badge rounded-pill px-2 py-1 small {{ $badgeColor }}">
                                        {{ strtoupper($lvl) }}
                                    </span>
                                </td>
                                <td class="small text-nowrap text-body-secondary">{{ $time }}</td>
                                <td class="font-monospace text-wrap" style="white-space:pre-line;">{{ $message }}</td>
                            </tr>
                        @endforeach
                        </tbody>
                    </table>
                </div>
            </div>

            {{-- Pagination direkt im Index --}}
            <div class="card-footer bg-body border-0 d-flex justify-content-center py-3"
                 style="border-radius:0 0 1.2rem 1.2rem">
                @if($logs->hasPages())
                <nav>
                    <ul class="pagination justify-content-center my-0 small">
                        {{-- Zurück --}}
                        <li class="page-item {{ $logs->onFirstPage() ? 'disabled' : '' }}">
                            <a class="page-link px-2" href="{{ $logs->previousPageUrl() }}" rel="prev" aria-label="Zurück">
                                <span aria-hidden="true" style="font-size:.8em;">&#8592;</span>
                                <span class="d-none d-md-inline ms-1">Zurück</span>
                            </a>
                        </li>

                        {{-- Seitenzahlen --}}
                        @foreach($logs->elements() as $element)
                            @if(is_string($element))
                                <li class="page-item disabled">
                                    <span class="page-link px-2">{{ $element }}</span>
                                </li>
                            @elseif(is_array($element))
                                @foreach($element as $page => $url)
                                    <li class="page-item {{ $page==$logs->currentPage() ? 'active' : '' }}">
                                        <a class="page-link px-2 rounded-circle" href="{{ $url }}">{{ $page }}</a>
                                    </li>
                                @endforeach
                            @endif
                        @endforeach

                        {{-- Weiter --}}
                        <li class="page-item {{ $logs->hasMorePages() ? '' : 'disabled' }}">
                            <a class="page-link px-2" href="{{ $logs->nextPageUrl() }}" rel="next" aria-label="Weiter">
                                <span class="d-none d-md-inline me-1">Weiter</span>
                                <span aria-hidden="true" style="font-size:.8em;">&#8594;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                @endif
            </div>
        </div>
    </x-app-content>
</x-app-layout>

@push('scripts')
<script>
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el =>
        new bootstrap.Tooltip(el)
    );
    const scrollBox = document.querySelector('.card-body');
    if (scrollBox) scrollBox.scrollTop = 0;
});
</script>
@endpush

