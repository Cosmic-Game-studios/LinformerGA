<x-app-layout>

    {{-- Der Seitentitel wird in den "header"-Slot des Hauptlayouts platziert --}}
    <x-slot name="header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h2 font-semibold text-xl text-gray-800 leading-tight mb-0">
                Laravel Error Log
            </h1>
            <a href="{{ route('errorlog.index') }}" class="btn btn-sm btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
