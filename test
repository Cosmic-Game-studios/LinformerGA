                </svg>
                Aktualisieren
            </a>
        </div>
    </x-slot>

    {{-- Der Hauptinhalt wird von deiner x-app-content Komponente umschlossen --}}
    <x-app-content>
        <div class="container-fluid py-4"> {{-- container-fluid für volle Breite innerhalb von app-content --}}
            @if($entries->isNotEmpty())
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 200px;">Zeitpunkt</th>
                                <th style="width: 150px;">Level</th>
                                <th>Nachricht</th>
                                <th style="width: 120px;" class="text-end">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach($entries as $e)
                                {{-- Die Logik für die klickbare Zeile und das Ausklappen bleibt identisch --}}
                                <tr class="log-entry-row" data-bs-toggle="collapse" data-bs-target="#collapse-{{ $loop->iteration }}" aria-expanded="false" aria-controls="collapse-{{ $loop->iteration }}">
                                    <td class="text-nowrap font-monospace small">{{ $e['datetime'] }}</td>
                                    <td>
                                        <span class="badge bg-{{ $e['badge'] }} fs-6">{{ $e['level'] }}</span>
                                    </td>
                                    <td class="text-break">{{ $e['summary'] }}</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary">
                                            Anzeigen
                                        </button>
                                    </td>
                                </tr>
                                <tr class="log-details-row">
                                    <td colspan="4" class="p-0">
                                        <div class="collapse" id="collapse-{{ $loop->iteration }}">
                                            <div class="p-3 bg-light">
                                                <pre class="mb-0 text-break">{{ $e['full'] }}</pre>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            @endforeach
                        </tbody>
                    </table>
                </div>
            @else
                <div class="alert alert-success text-center">
                    <h4 class="alert-heading">Alles bestens!</h4>
                    <p class="mb-0">Keine Log-Einträge gefunden. Das System läuft fehlerfrei.</p>
                </div>
            @endif
        </div>
    </x-app-content>

    {{-- 
      Die x-app-marginal Komponente wird hier nicht verwendet, da kein Seiteninhalt benötigt wird.
      Du könntest sie bei Bedarf hier neben x-app-content platzieren.
    --}}

</x-app-layout>

