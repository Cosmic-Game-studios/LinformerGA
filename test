@push('scripts')
<script>
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el =>
        new bootstrap.Tooltip(el)
    );
    const box = document.querySelector('.card-body');
    if (box) box.scrollTop = 0;
});
</script>
@endpush

