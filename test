            {{-- Pagination --}}
            <div class="card-footer bg-body border-0 d-flex justify-content-center py-3"
                 style="border-radius:0 0 1.2rem 1.2rem">
                @if($logs->hasPages())
                    <nav>
                        <ul class="pagination justify-content-center my-0 small">
                            {{-- Zurück --}}
                            <li class="page-item {{ $logs->onFirstPage() ? 'disabled' : '' }}">
                                <a class="page-link px-2"
                                   href="{{ $logs->previousPageUrl() }}&per_page={{ $perPage }}"
                                   rel="prev" aria-label="Zurück">
                                    <span aria-hidden="true" style="font-size:.8em;">&#8592;</span>
                                    <span class="d-none d-md-inline ms-1">Zurück</span>
                                </a>
                            </li>
                            {{-- Seitenlinks (aktuelle ±1) --}}
                            @php
                                $cur = $logs->currentPage();
                                $last = $logs->lastPage();
                                $start = max(1, $cur - 1);
                                $end   = min($last, $cur + 1);
                            @endphp
                            @for($p=$start; $p<=$end; $p++)
                                <li class="page-item {{ $p==$cur?'active':'' }}">
                                    <a class="page-link px-2 rounded-circle"
                                       href="{{ url()->current() }}?file={{ urlencode($currentFile) }}&page={{ $p }}&per_page={{ $perPage }}">
                                        {{ $p }}
                                    </a>
                                </li>
                            @endfor
                            {{-- Weiter --}}
                            <li class="page-item {{ $logs->hasMorePages()?'':'disabled' }}">
                                <a class="page-link px-2"
                                   href="{{ $logs->nextPageUrl() }}&per_page={{ $perPage }}"
                                   rel="next" aria-label="Weiter">
                                    <span class="d-none d-md-inline me-1">Weiter</span>
                                    <span aria-hidden="true" style="font-size:.8em;">&#8594;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                @endif
            </div>
