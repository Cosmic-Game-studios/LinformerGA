    {{-- Rechte Sidebar mit Datum/Dateien --}}
    <x-app-marginal class="bg-body border-start" style="min-width:260px;max-width:320px">
        <div class="d-flex flex-column h-100">
            <div class="py-2 px-3 border-bottom bg-body-tertiary fw-semibold text-uppercase small sticky-top" style="z-index:2;">
                <i class="fas fa-list-ul me-2"></i> Log-Dateien
            </div>
            <div class="flex-grow-1 overflow-auto">
                <div class="list-group list-group-flush">
                    @foreach($availableDates as $item)
                        @php
                            $d      = $item['date'];
                            $size   = $item['size'];
                            $active = $d === $currentDate;
                            $url    = route('admin.errorlog.index', ['date'=>$d,'per_page'=>$perPage]);
                        @endphp
                        <a href="{{ $url }}"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center
                                  border-0 py-3 pe-3 ps-4 {{ $active ? 'active bg-primary text-white shadow-sm' : 'sidebar-item' }}">
                            <span class="text-truncate" style="max-width:140px">
                                <i class="fas fa-file-alt me-2 text-body-secondary"></i>
                                laravel-{{ $d }}.log
                            </span>
                            <small class="badge bg-body-secondary text-body rounded-pill">
                                {{ number_format($size/1024,1) }} KB
                            </small>
                        </a>
                    @endforeach
                </div>
            </div>
        </div>
    </x-app-marginal>

```
{{-- Hauptbereich --}}
<x-app-content>
    <div class="card border-0 shadow-sm my-4" style="border-radius:1.2rem">
        {{-- Header mit Controls --}}
        <div class="card-header bg-body-tertiary border-0 px-4 py-3" style="border-radius:1.2rem 1.2rem 0 0">
            <div class="d-flex flex-wrap align-items-center gap-3">
                {{-- Datumsauswahl --}}
                <div class="d-flex align-items-center gap-2">
                    <label class="small mb-0 text-body-secondary">Datum:</label>
                    <select id="dateSelect" class="form-select form-select-sm w-auto" onchange="changeDateFilter(this.value)">
                        @foreach($availableDates as $it)
                            <option value="{{ $it['date'] }}" {{ $it['date']==$currentDate?'selected':'' }}>
                                {{ $it['date'] }}
                            </option>
                        @endforeach
                    </select>
                </div>

                {{-- Zeilen/Seite --}}
                <div class="d-flex align-items-center gap-2">
                    <label class="small mb-0 text-body-secondary">Zeilen/Seite:</label>
                    <select id="perPageSelect" class="form-select form-select-sm w-auto" onchange="changePerPageFilter(this.value)">
                        <option value="50" {{ 50==$perPage?'selected':'' }}>50</option>
                        <option value="100" {{ 100==$perPage?'selected':'' }}>100</option>
                        <option value="200" {{ 200==$perPage?'selected':'' }}>200</option>
                        <option value="500" {{ 500==$perPage?'selected':'' }}>500</option>
                    </select>
                </div>

                {{-- Level-Filter --}}
                <div class="btn-group" role="group" aria-label="Log-Level filtern">
                    <button type="button" class="btn btn-sm btn-outline-secondary level-btn active" onclick="filterByLevel('all', this)">Alle</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary level-btn" onclick="filterByLevel('error', this)">ERROR</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary level-btn" onclick="filterByLevel('warning', this)">WARNUNG</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary level-btn" onclick="filterByLevel('info', this)">INFO</button>
                </div>

                {{-- Volltextsuche --}}
                <div class="input-group input-group-sm flex-grow-1" style="min-width:200px">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input id="searchInput" type="text" class="form-control" placeholder="Suche…" oninput="filterBySearch(this.value)">
                </div>

                {{-- Download & Clear --}}
                <div class="btn-group ms-auto">
                    <a href="{{ route('admin.errorlog.download', ['file'=>$currentFile]) }}"
                       class="btn btn-sm btn-body-secondary border-0 shadow-sm" data-bs-toggle="tooltip" title="Download">
                        <i class="fas fa-download"></i>
                    </a>
                    <form action="{{ route('admin.errorlog.clear') }}" method="POST" class="m-0" onsubmit="return confirm('Alle älteren Logs löschen?');">
                        @csrf @method('DELETE')
                        <button type="submit" class="btn btn-sm btn-body-secondary border-0 shadow-sm text-danger" data-bs-toggle="tooltip" title="Alte Logs löschen">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        {{-- Logs als Tabelle --}}
        <div class="card-body bg-body p-0" style="max-height:65vh; overflow:auto">
            <table class="table table-sm table-hover align-middle mb-0" style="font-family:'Fira Code','Consolas',monospace;font-size:.95rem">
                <thead class="small text-body-secondary sticky-top bg-body-tertiary">
                    <tr>
                        <th style="width:80px">Level</th>
                        <th style="width:140px">Zeit</th>
                        <th>Nachricht</th>
                    </tr>
                </thead>
                <tbody id="logTable">
                    @foreach($logs as $entry)
                        @php
                            $lvl = $entry['level'];
                            $color = in_array($lvl,['error','critical'])
                                ? 'bg-danger text-white'
                                : ($lvl==='warning' ? 'bg-warning text-dark' : 'bg-info text-dark');
                            preg_match('/\[(.*?)\]/',$entry['raw'],$m);
                            $time = $m[1] ?? '';
                            $msg  = trim(preg_replace('/^\[[^\]]+\]\s+\w+\.([A-Z]+):\s*/','',$entry['raw']));
                        @endphp
                        <tr class="log-row" data-level="{{ $lvl }}" data-search="{{ strtolower($entry['raw']) }}">
                            <td><span class="badge rounded-pill px-2 py-1 {{ $color }}">{{ strtoupper($lvl) }}</span></td>
                            <td class="small text-nowrap text-body-secondary">{{ $time }}</td>
                            <td class="text-wrap" style="white-space:pre-line">{{ $msg }}</td>
                        </tr>
                    @endforeach
                </tbody>
            </table>
        </div>

        {{-- Pagination --}}
        <div class="card-footer bg-body border-0 d-flex justify-content-center py-3" style="border-radius:0 0 1.2rem 1.2rem">
            @if($logs->hasPages())
            <nav>
                <ul class="pagination justify-content-center my-0 small">
                    {{-- Zurück --}}
                    <li class="page-item {{ $logs->onFirstPage()?'disabled':'' }}">
                        <a class="page-link px-2" href="{{ $logs->previousPageUrl() }}&date={{ $currentDate }}&per_page={{ $perPage }}" rel="prev">
                            <span style="font-size:.8em">&#8592;</span> <span class="d-none d-md-inline">Zurück</span>
                        </a>
                    </li>
                    @php
                        $cur   = $logs->currentPage();
                        $last  = $logs->lastPage();
                        $start = max(1,$cur-1);
                        $end   = min($last,$cur+1);
                    @endphp
                    @for($p=$start;$p<=$end;$p++)
                        <li class="page-item {{ $p==$cur?'active':'' }}">
                            <a class="page-link px-2 rounded-circle" href="{{ url()->current() }}?date={{ $currentDate }}&page={{ $p }}&per_page={{ $perPage }}">
                                {{ $p }}
                            </a>
                        </li>
                    @endfor
                    {{-- Weiter --}}
                    <li class="page-item {{ $logs->hasMorePages()?'':'disabled' }}">
                        <a class="page-link px-2" href="{{ $logs->nextPageUrl() }}&date={{ $currentDate }}&per_page={{ $perPage }}" rel="next">
                            <span class="d-none d-md-inline">Weiter</span> <span style="font-size:.8em">&#8594;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            @endif
        </div>
    </div>
</x-app-content>
```

</x-app-layout>

<script>
// Globale Variablen
var currentLevel = 'all';
var currentSearch = '';

// 1. DATUM ÄNDERN
function changeDateFilter(date) {
    var baseUrl = window.location.pathname;
    window.location.href = baseUrl + '?date=' + date + '&per_page={{ $perPage }}';
}

// 2. ZEILEN PRO SEITE ÄNDERN  
function changePerPageFilter(perPage) {
    var baseUrl = window.location.pathname;
    window.location.href = baseUrl + '?date={{ $currentDate }}&per_page=' + perPage;
}

// 3. LEVEL FILTER
function filterByLevel(level, button) {
    // Alle Buttons deaktivieren
    var buttons = document.getElementsByClassName('level-btn');
    for (var i = 0; i < buttons.length; i++) {
        buttons[i].className = buttons[i].className.replace(' active', '');
    }
    
    // Aktuellen Button aktivieren
    button.className += ' active';
    
    // Filter setzen
    currentLevel = level;
    applyFilters();
}

// 4. SUCHE
function filterBySearch(searchTerm) {
    currentSearch = searchTerm.toLowerCase();
    applyFilters();
}

// 5. FILTER ANWENDEN
function applyFilters() {
    var rows = document.getElementsByClassName('log-row');
    
    for (var i = 0; i < rows.length; i++) {
        var row = rows[i];
        var show = true;
        
        // Level-Check
        if (currentLevel !== 'all') {
            var rowLevel = row.getAttribute('data-level');
            if (rowLevel !== currentLevel) {
                show = false;
            }
        }
        
        // Suche-Check
        if (show && currentSearch !== '') {
            var searchData = row.getAttribute('data-search') || '';
            if (searchData.indexOf(currentSearch) === -1) {
                show = false;
            }
        }
        
        // Zeile anzeigen/verstecken
        if (show) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    }
}

// Tooltips (wenn verfügbar)
document.addEventListener('DOMContentLoaded', function() {
    try {
        if (typeof bootstrap !== 'undefined') {
            var tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            for (var i = 0; i < tooltips.length; i++) {
                new bootstrap.Tooltip(tooltips[i]);
            }
        }
    } catch(e) {}
});
</script>

<style>
